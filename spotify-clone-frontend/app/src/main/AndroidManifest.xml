<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.spotifyclone">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_spotify"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_spotify_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.home.HomeActivity" />
        <activity android:name=".presentation.login.LoginActivity" />
        <activity android:name=".presentation.login.CredentialsActivity" />
        <activity android:name=".presentation.playlist.LocalSongsActivity" />
        <activity android:name=".presentation.music.MusicPlayerActivity" />
        <activity android:name=".presentation.musicqueue.MusicQueueActivity" />
    </application>

</manifest>